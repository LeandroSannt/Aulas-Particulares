{% extends "layout.njk" %}

{% block content %}

    <section class="card">
        <div class="img-url" style="background:url({{teacher.avatar_url}})"></div>
        <div class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.escolaridade}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{"Presencial" if teacher.availability ==  "Presencial" else "Online"}}</div>
            </div>

            <div class="item">
                <div>acompanhamento</div>
                <div>
                    {% for service in teacher.services %}
                        <span>{{service}}</span>
                    {% endfor %}

                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.create_at}}</div>
            </div>

            <a href="/teacher/{{teacher.id}}/edit" class="buttom">Editar</a>

        </div>

    </section>

{% endblock content %}