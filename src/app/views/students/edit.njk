{% extends "layout.njk" %}


 {% block log %}
         <a  href="/students"><img src="/imagens/arrow-left.svg" alt="login"> Voltar</a>
{% endblock log %}

{% block content %}
<div class="card">
        <div class="img-url" style="background:url({{students.avatar_url}}) no-repeat center center/cover">
        </div>

<section class="put">
    <form  method="POST" action="/students?_method=PUT">
        <div class="details">
                <h3>Novo Professor</h3>
                {%include "students/fields.njk"%}
                <input type="hidden" name="id"value={{students.id}}>

            <div class="btn">
                <button class="salvar" type="submit">Salvar</button>
            </div>
     </form >

    <form id="form-delete"   method="POST" action="/students?_method=DELETE">
        <div class="btn"></div>
        <button class =delete type="submit">Deletar</button> 
        <input type="hidden" name="id"value={{students.id}}>        
    </form>

{% endblock content %}