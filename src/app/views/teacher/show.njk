{% extends "layout.njk" %}

 {% block log %}
         <a  href="/"><img src="/imagens/arrow-left.svg" alt="login"> Voltar</a>
{% endblock log %}

{% block content %}

    <section class="card">
        <div class="img-url" style="background:url({{teacher.avatar_url}}) no-repeat center center/cover"></div>
        <div class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Professor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{teacher.escolaridade}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{"Presencial" if teacher.availability ==  "P" else "Online"}}</div>
            </div>

            <div class="item">
                <div>acompanhamento</div>
                <div>
                    {% for service in teacher.services %}
                       {{service}}
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <a href="/teacher/{{teacher.id}}/edit" class="buttom">Editar</a>

        </div>

    </section>

{% endblock content %}