{% extends "layout.njk" %}

 {% block log %}
         <a  href="teacher/create"><img src="/imagens/log-in.svg" alt="login">Cadastrar</a>
    {% endblock log %}

{% block content %}

    <section class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>Professores</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td><span style="background-image:url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                    </td>
                    
                    
                    <td >
                       {% for services in teacher.services %}
                    
                    <span >{{services}}</span>
                    {% endfor %}
                    <td><a href="teacher/{{services.id}}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>

{% endblock content %}